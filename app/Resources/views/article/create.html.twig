{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('article_create') }}" method="POST">
                <fieldset>
                    <legend>Нова Рецепта</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Заглавие</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_title" placeholder="Заглавие"
                                   name="article[title]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_raw">Съставки</label>
                        <div class="col-sm-4">
                        <table class="table table-bordered table-hover" id="tab_logic">
                            <thead>
                            <tr >
                                <th class="text-center">
                                    Суровина
                                </th>
                                <th class="text-center">
                                    Количество
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr id='addr0' name="raws[]">
                                <td>
                                    <div name="rawsName[]">
                                        {{ form_widget(form.raws) }}
                                    </div>
                                </td>
                                <td>
                                    <input type="number" step="0.01" placeholder='Кг. / бр.' name="rawsQantity[]" class="form-control"/>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                            <a id="addRow" class="btn btn-default pull-left">Добави</a>
                            <a id='delete_row' class="pull-right btn btn-default">Изтрии</a>
                        </div>


                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_content">Съдържание</label>
                        <div class="col-sm-6">
                            <textarea class="form-control" rows="6" id="article_content"
                                      name="article[content]"></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_category">Категория</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.category) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_tags">Таг</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_tags" placeholder="Таг"
                                   name="tags">
                        </div>
                    </div>
                    {{ form_row(form._token) }}


                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('blog_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}
