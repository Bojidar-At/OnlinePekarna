{% extends 'base.html.twig' %}

{% block body_id 'profile' %}

{% block main %}
    <div>
        {{ user.email }}
        <br>
        {{ user.fullName }}
    </div>

    <div class="container body-content">
        <h1>Всички мой статии</h1>
        <div class="row">
            {% for article in author.author.articles %}
                <div class="col-md-6">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                        </header>

                        <p>
                            {{ article.summary }}
                        </p>
                        <p>
                            {% for tag in article.tags %}
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('articles_with_tag', {'name': tag.name}) }}">{{ tag.name }}</a>
                            {% endfor %}
                        </p>
                        <small class="author">
                            {{ article.author }}
                        </small>

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('article_view', {'id': article.id}) }}">Прочети &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
